div.article-block.clearfix
  div.top(style="width:660px;background-color:#3F66A0;margin:30px auto 3px;position:relative;")
   div.top-desc(style="border-bottom:3px solid #efefef;")
    h1.title#sendTitle(style="font-size:26px;color:#fff;text-align:left;line-height:1;padding:20px 0px 20px 30px;background-color:#0099cc;margin:0;letter-spacing:3px;font-weight:normal") 
     span.title #{title}
     span#sendDate(style="font-size:14px;letter-spacing:0px;color:#ddd;padding-left:20px;") 发送日期
    div.vol(style="font-size:12px;color:#fff;background-color:#0099cc;width:140px;padding-right:10px;background-image:url('https://i.alipayobjects.com/e/201209/1CGPoVRMHF.png');background-repeat:no-repeat;background-position: 98% center;padding-right:100px;height:25px;line-height:25px;padding:8px 20px;position:absolute;right:10px;top:15px;z-index:999") 邮差猫 v0.2
   div#sendBg(style="position:relative;margin-bottom:0px;margin-left:auto;margin-right:auto;color:#fff;height:210px;background-image:url(#{bg});background-repeat:no-repeat;")
  div.left(style="clear:both;width:660px;margin:0px auto 10px;")
   - if(typeof(onlineWeekly) !== 'undefined' && onlineWeekly === true)
       div#editor
   - if(typeof(lists) !== 'undefined')
     each l in lists
       div(style="margin:1px 0 !important;background-color:#f5f5f5;overflow:hidden;padding:0 !important;")
        h3(style="display:block;margin-right:10px;font-size:20px;color:#3F66A0;margin:0px 0px 20px 0px;margin-bottom:1px;padding:10px 20px;text-align:left;")= l.name
        ul(style="margin: 0; padding: 0;font-size:14px;color:#444;line-height:1.5;")
         each c in l.cards
          if (c.name)
           li(style="padding:0;margin:0;text-indent:0;background-color:#efefef;margin:0px 1px 1px 0px;padding:10px 20px;list-style:none;border-bottom:1px solid #ddd;display:block !important;position:relative;line-height:1.8;color:#444;font-size:16px;")= c.name
             if (c.HTMLdesc !== '')
              div.desc(style="font-size:12px;color:#444w;display:block;margin-top:5px;font-weight:normal;") !{c.HTMLdesc}
             else 
              div.desc(style="font-size:12px;color:#444;display:block;margin-top:5px;font-weight:normal;background: url(http://cdn2.iconfinder.com/data/icons/splashyIcons/comment_question.png) no-repeat 3px 2px;padding-left:24px;display:none;") 这个项目没有详细描述
             if (c.idChecklists)
              each cardCheckList in c.idChecklists
               each realCheckList in checkLists
                if realCheckList.id == cardCheckList
                 div.check-list-wrap
                  ul.check-list(style="padding:0;margin:0;font-size:14px;font-weight:bold;margin-top:10px;list-style:none;") 
                    span(style="display:block;background-color:#F9EFB7;padding:4px 10px;border:1px solid #ddd;color:#444;")= realCheckList.name
                    each clitem in realCheckList.checkItems
                     li(style="padding:0;margin:0;font-weight:normal;color:#444;border:1px solid #ddd;padding:5px 10px;background-color:#f5f5f5;margin-top:-1px;background-color:#fff;background:#fff url(http://cdn4.iconfinder.com/data/icons/fugue/icon/calendar-task.png) no-repeat 8px 7px;padding-left:30px;font-size:12px;position:relative;")= clitem.name
                        each cardCheckListState in c.checkItemStates
                         if cardCheckListState.idCheckItem == clitem.id
                          span(style="background:url(http://cdn1.iconfinder.com/data/icons/silk2/tick.png) no-repeat 99% 6px;font-style:normal;padding-right:25px;color:#999;background-color:#efefef; position: absolute;width:592px;height:30px;z-index:1;left:0;top:0;opacity:0.6;text-align:right;line-height:30px;") 已完成
   div(style="clear:both;padding:20px 0px;color:#999;margin-top:1px;font-size:12px;") &copy; 2012 !{title} | 邮差猫 v0.2</a>